<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/style_border_editext"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEligeNick"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/style_border_editext"
            android:fontFamily="@font/acme"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Introduce el nombre que deseas utilizar"
            android:textColor="@color/LetraPrincipal"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_border_editext"
            android:ems="10"
            android:fontFamily="@font/acme"
            android:gravity="center|center_horizontal|center_vertical"
            android:hint="RaÃºl"
            android:inputType="textPersonName"
            android:textColor="@color/LetraSecundaria"
            android:textColorHint="@color/LetraSecundaria"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_border_editext"
            android:backgroundTint="@color/LetraPrincipal"
            android:fontFamily="@font/acme"
            android:text="Aceptar"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>