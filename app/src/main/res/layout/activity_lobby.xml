<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actLobby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Lobby">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/LetraPrincipal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnNewsLobby"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/LetraPrincipal"
                android:onClick="news"
                app:srcCompat="@drawable/world_news__1_" />

            <ImageButton
                android:id="@+id/btnLobbyLobby"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#6B4873"
                app:srcCompat="@drawable/lobby" />

            <ImageButton
                android:id="@+id/btnProfileLobby"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/LetraPrincipal"
                android:onClick="profile"
                app:srcCompat="@drawable/profile" />

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ListView
        android:id="@+id/lvListaPartidas"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:layout_above="@+id/nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtnCrear"
        android:layout_width="wrap_content"
        android:layout_height="439dp"
        android:layout_above="@+id/nav"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:onClick="CrearPartida"
        android:src="@drawable/add" />

</RelativeLayout>